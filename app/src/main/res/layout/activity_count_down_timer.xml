<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountDownTimer">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:layout_below="@id/timeLeft"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="128dp"
        android:text="セット数"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/setNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:text="3"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="128dp"
        android:layout_marginRight="50dp"
        android:text="カウント"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/countNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="90dp"
        android:text="3"
        android:textSize="25sp" />

    <ProgressBar
        android:id="@+id/pb"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:background="@drawable/curclar_shape"
        android:progressDrawable="@drawable/curclar_progress_bar" />

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_start_stop"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb"
        android:layout_centerInParent="true"
        android:text="start"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/startStopButton"/>

    <Button
        android:id="@+id/button_reset"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_stop"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:backgroundTint="@color/startStopButton"/>


</RelativeLayout>